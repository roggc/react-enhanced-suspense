{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "./dist",
    // "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "noEmit": false,
    "types": ["@testing-library/jest-dom", "node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "jest-setup.ts"
  ]
}
